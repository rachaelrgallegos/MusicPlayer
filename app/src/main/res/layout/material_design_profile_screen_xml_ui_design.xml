<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout"
        android:layout_alignParentEnd="true">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:elevation="4dp"
            android:paddingBottom="24dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_alignParentStart="true">


            <ImageView
                android:id="@+id/add_Like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/heartheadphones48x48"
                android:layout_below="@+id/user_profile_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>

            <ImageView
                android:id="@+id/disLike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp"
                android:src="@drawable/trash_empty"
                android:layout_below="@+id/add_Like"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>

            <ImageView
                android:id="@+id/follow"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:src="@drawable/myom_check_48x48"
                android:layout_alignTop="@+id/user_profile_name"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music Mood:"
                android:textColor="#fff"
                android:textSize="18sp"
                android:paddingTop="5dp"
                android:layout_alignStart="@+id/user_profile_name"
                android:layout_below="@+id/user_profile_name"
                android:layout_marginEnd="13dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Party Time"
                android:textColor="#fff"
                android:textColorHint="@color/com_facebook_blue"
                android:textSize="18sp"
                android:layout_below="@+id/user_profile_short_bio"
                android:layout_alignStart="@+id/user_profile_short_bio"
                android:layout_marginEnd="13dp"
                />

        <EditText
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="User Name"
            android:textColor="#fff"
            android:textColorHint="@color/tw__composer_light_gray"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:paddingTop="15dp"
            android:layout_toRightOf="@+id/user_profile_photo"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="13dp" />

            <ImageButton
                android:id="@+id/user_profile_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/profile_circular_border_imageview"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/person"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"/>

        </RelativeLayout>

        <ListView
            android:id="@+id/song_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_layout"
            android:layout_alignParentStart="true">
        </ListView>

    <ImageView
        android:id="@+id/header_cover_image"
        android:layout_width="500dp"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/myom_hs"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</RelativeLayout>